{% extends 'partials/base.html.twig' %}

{% set image = page.media.images|first %}

{% block body %}
	<div class="md:flex items-center w-full py-5 ">

		{% if image %}
			<div class="w-1/2 text-middle p-4">
				<img src="{{image.resize(300,300).url}}" class="mx-auto"/>
			</div>

		{% endif %}

		<div class="flex-1">
			<h1 class="text-2xl border-b p-2 mb-2">
				{{ page.title }}
			</h1>

			<div class="py-5 ">
				{{ page.content|raw }}
			</div>
		</div>

	</div>

{% endblock %}
