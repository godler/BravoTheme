<div class="py-20 p-5 md:px-0" x-data="{openId: null}">
	<div class="container mx-auto max-w-4xl">
		{% for item in page.header.accordions %}
			<div class="bg-white shadow-lg rounded-lg  p-5 mb-5">
				<div class="cursor-pointer ">
					<h3 @click="openId = {{loop.index}}" class="font-semibold text-gray-500">
						<i class="ti ti-plus "></i>
						{{ item.title }}</h3>
				</div>
				<div x-show="openId == {{loop.index}}" class="mt-2">
					{{ item.content | raw}}
				</div>

			</div>
		{% endfor %}
	</div>
</div>
